const pi 3

# Loop start.
label circ_loop
# Save radius in reg4.
mov|from*in|reg4

# Calculate circumference by 
# repeated addition (x 6 (2pi)).
mov|from*reg4|reg1
mov|from*reg4|reg2
add  # 2r.
mov|from*reg3|reg1
add  # 3r.
mov|from*reg3|reg1
add  # 4r.
mov|from*reg3|reg1
add  # 5r.
mov|from*reg3|reg1
add  # 6r.

# Output result.
mov|from*reg3|out

# Jump to loop start.
circ_loop jmp
